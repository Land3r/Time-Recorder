// app global css

@import 'quasar.variables'

.header, .footer
  background: linear-gradient(145deg,$theme_color1 11%,$theme_color2 45%)

h1
  font-size: 2rem
  line-height: 4rem
  font-weight: 500
  margin: 0 0 1.5rem

h3
  font-size: 1.5rem
  line-height: 2rem
  font-weight: 400
  margin: 0.5rem 1rem 1rem

.cursor-disabled
  cursor: not-allowed

.can-rotate
  transition: transform .8s ease-in-out

.on-hover-rotate:hover
  transform: rotate(180deg)
